{% extends 'base.html.twig' %}

{% block title %}Hello User list!{% endblock %}

{% block body %}
    <ul class="nav">
        <li class="nav-item">
            <a class="nav-link" href="{{ path('app_logout') }}">Logout</a>
        </li>
    </ul>

    <table class="table">
    <thead>
    <tr>
{#        <th scope="col">#</th>#}
        <th scope="col">Username</th>
        <th scope="col">Action</th>
    </tr>
    </thead>
    <tbody>

    {% for user in pagination %}
        <tr>
{#           <th scope="row">{{ user.id }}</th>#}
           <td>{{ user.username }}</td>
           <td>
               {%  if(user.isActive) %}
                   <form class="reserve-run" action="{{ path('deactiveAccount', {'id' : user.id}) }}">
                       <button class="btn btn-danger" style="margin-right: 0px;">Deactive</button>
                   </form>
               {% else %}
                   <form class="reserve-run" action="{{ path('activeAccount', {'id' : user.id}) }}">
                       <button class="btn btn-success" style="margin-right: 0px;">Active</button>
                   </form>
               {% endif %}
           </td>
        </tr>
    {% endfor %}
    </tbody>
    </table>
    <div class="navigation float-right">
        {{ knp_pagination_render(pagination) }}
    </div>

{% endblock %}
{% block javascripts %}
{% endblock %}